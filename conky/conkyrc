
conky.config = {
    alignment = 'top_left',
    background = false,
    border_width = 3,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = true,
    font = 'Liberation Sans Mono:size=10',
    gap_x = 4,
    gap_y = 4,
    minimum_height = 5,
    minimum_width = 435,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_argb_value = 150,

    own_window_class = 'Conky',
    own_window_type = 'desktop',
    show_graph_range = true,
    show_graph_scale = true,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = true,
    use_spacer = 'right',
    use_xft = true,
}

